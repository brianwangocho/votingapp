<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="3dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/grey">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:id="@+id/votingposition"
            android:textSize="20dp"
            android:text="Student leader"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:id="@+id/votingpositiondescription"
            android:layout_below="@id/votingposition"
            android:textSize="19dp"
            android:text=" is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_below="@id/votingpositiondescription"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:id="@+id/candidate"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content"
                android:text="2 Candidates"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:id="@+id/view"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:text="view"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>